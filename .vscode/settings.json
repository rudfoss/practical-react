{
  "editor.rulers": [100],
  "editor.wordWrapColumn": 100,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "task.quickOpen.history": 0,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "npm.packageManager": "npm",
  "workbench.iconTheme": "vscode-icons",
  "debug.javascript.autoAttachFilter": "disabled",

  "files.exclude": {
    "**/.*": true,
    "dist": true,
    "**/package.json": true,
    "**/node_modules": true,
    "package-lock.json": true,
    "nx.json": true,
    "**/project.json": true,
    "**/tsconfig*.json": true,
    "**/*.config.*": true,
    "**/vitest.*": true,
    "**/playwright.config.ts": true,
    "**/index.html": true,
    "jsonDb.json": true,
    "global.json": true,
    "tools": true,
    "tmp": true,
    "docs": true,
    "userdb/api": true,
    "userdb/api-spec": true
  },

  "cSpell.words": [
    "Buildable",
    "codegen",
    "cssmodule",
    "nestjs",
    "Newtonsoft",
    "nswag",
    "tsclient",
    "userdb",
    "winget"
  ],
  "exportall.config.folderListener": ["/libs/ui/src"]
}
