{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"strictPropertyInitialization": false,
		"baseUrl": ".",
		"paths": {
			"@react-workshop/ui": ["libs/ui/src/index.ts"],
			"@react-workshop/userdb-api-client": ["userdb/api-client/src/index.ts"],
			"@react-workshop/utils": ["libs/utils/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
