{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"affected": {
		"defaultBase": "main"
	},
	"targetDefaults": {
		"build": {
			"cache": true,
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"production",
				"^production"
			]
		},
		"lint": {
			"cache": true
		}
	},
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*",
			"sharedGlobals"
		],
		"production": [
			"default"
		],
		"sharedGlobals": []
	}
}